  	<!--<div id="weatherInfo" class="row"><h2>Weather info loading...</h2></div>-->
  	
  	<div id="carInfo" class="row">
  		<h2>Car info loading...</h2>
  		<%- include widget-carsinfo.ejs %>
  	</div>
  	   
    <%- include widget-position-map.ejs %>    
  </body>
</html>

